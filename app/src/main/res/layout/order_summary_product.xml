<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView android:layout_width="wrap_content"
              android:text="Saddle Brown"
              android:fontFamily="sans-serif-medium"
              android:layout_height="wrap_content"
              android:id="@+id/productNameTextView"
              android:layout_marginTop="16dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="16dp"
              android:textSize="20sp"
              android:textColor="@color/login_button_color"/>
    <TextView
            android:text="RK12334"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:id="@+id/productCodeTextView"
            app:layout_constraintTop_toBottomOf="@+id/productNameTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"/>


    <Button android:visibility="gone"
            android:id="@+id/addButton"
            android:text="Add"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/login_button_color"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="#f1f1f1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.533"/>

    <com.kleverowl.staffapp.components.numberpicker.NumberPicker android:layout_width="wrap_content"
                                                                     android:layout_height="0dp"
                                                                     android:id="@+id/quantityView"
                                                                     android:layout_marginRight="20dp"
                                                                     android:layout_marginEnd="20dp"
                                                                     android:visibility="visible"
                                                                     android:layout_marginBottom="20dp"
                                                                     app:layout_constraintBottom_toBottomOf="parent"
                                                                     app:layout_constraintEnd_toEndOf="parent"
                                                                     android:layout_marginTop="20dp"
                                                                     app:layout_constraintTop_toTopOf="parent"/>

    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="@color/login_button_color"
          app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>