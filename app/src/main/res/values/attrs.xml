<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AHBottomNavigationBehavior_Params">
        <attr name="tabLayoutId" format="reference" />
        <attr name="selectedBackgroundVisible" format="boolean" />
        <attr name="translucentNavigationEnabled" format="boolean" />
        <attr name="colored" format="boolean" />
        <attr name="accentColor" format="color" />
        <attr name="inactiveColor" format="color" />
        <attr name="disableColor" format="color" />
        <attr name="coloredActive" format="color" />
        <attr name="coloredInactive" format="color" />
    </declare-styleable>

    <declare-styleable name="CropView">
        <!-- Viewport ratio used to compute height based off view width -->
        <attr name="cropviewViewportRatio" format="float" />
        <!-- Viewport overlay color -->
        <attr name="cropviewViewportOverlayColor" format="color" />
        <!-- Viewport overlay padding -->
        <attr name="cropviewViewportOverlayPadding" format="dimension" />
        <!-- Maximum zoom level -->
        <attr name="cropviewMaxScale" format="float" />
        <!-- Minimum  zoom level -->
        <attr name="cropviewMinScale" format="float" />
        <!-- Shape -->
        <attr name="cropviewShape" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="oval" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="LoopingViewPager">
        <attr name="isInfinite" format="boolean" />
        <attr name="autoScroll" format="boolean" />
        <attr name="wrap_content" format="boolean" />
        <attr name="scrollInterval" format="integer" />
        <attr name="viewpagerAspectRatio" format="float" />
    </declare-styleable>


    <declare-styleable name="QuantityView">
        <attr name="qv_addButtonText" format="string" />
        <attr name="qv_addButtonBackground" format="color|reference" />
        <attr name="qv_addButtonTextColor" format="color" />

        <attr name="qv_removeButtonText" format="string" />
        <attr name="qv_removeButtonBackground" format="color|reference" />
        <attr name="qv_removeButtonTextColor" format="color" />

        <attr name="qv_quantity" format="integer" />
        <attr name="qv_quantityDialog" format="boolean" />
        <attr name="qv_quantityBackground" format="color|reference" />
        <attr name="qv_quantityTextColor" format="color" />
        <attr name="qv_quantityPadding" format="dimension" />

        <attr name="qv_maxQuantity" format="integer" />
        <attr name="qv_minQuantity" format="integer" />
    </declare-styleable>

    <declare-styleable name="NumberPicker">
        <attr name="min" format="integer"/>
        <attr name="max" format="integer"/>
        <attr name="value" format="integer"/>
        <attr name="unit" format="integer" />
        <attr name="custom_layout" format="reference" />
        <attr name="focusable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="Themes">
        <attr name="NumberPickerLayout" format="reference"/>
    </declare-styleable>


    <declare-styleable name="TimelineView">
        <attr name="marker" format="color|reference"/>
        <attr name="markerSize" format="dimension"/>
        <attr name="markerInCenter" format="boolean"/>
        <attr name="startLineColor" format="color"/>
        <attr name="endLineColor" format="color"/>
        <attr name="timelineWidth" format="dimension"/>
        <attr name="lineStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="dash" value="1" />
        </attr>
        <attr name="lineStyleDashGap" format="dimension" />
        <attr name="lineStyleDashLength" format="dimension" />
        <attr name="lineOrientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <attr name="linePadding" format="dimension"/>
    </declare-styleable>


</resources>